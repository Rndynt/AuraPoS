{
  "name": "@pos/root",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "NODE_ENV=development tsx apps/api/src/index.ts",
    "dev:turbo": "turbo run dev",
    "build": "turbo run build",
    "build:legacy": "vite build && esbuild apps/api/src/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "NODE_ENV=production node dist/index.js",
    "check": "tsc",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "db:push": "drizzle-kit push",
    "db:seed": "tsx apps/api/src/seed.ts",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "autoprefixer": "^10.4.22",
    "drizzle-kit": "^0.31.4",
    "esbuild": "^0.25.0",
    "postcss": "^8.5.6",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.5",
    "turbo": "^1.13.0",
    "typescript": "5.6.3",
    "vite": "^5.4.20"
  },
  "dependencies": {
    "@jridgewell/trace-mapping": "^0.3.31",
    "@neondatabase/serverless": "^1.0.2",
    "@replit/vite-plugin-cartographer": "^0.4.3",
    "@replit/vite-plugin-dev-banner": "^0.1.1",
    "@replit/vite-plugin-runtime-error-modal": "^0.0.3",
    "@tanstack/react-query": "^5.90.10",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express": "^5.0.5",
    "@types/express-session": "^1.18.2",
    "@types/passport": "^1.0.17",
    "@types/passport-local": "^1.0.38",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "connect-pg-simple": "^10.0.0",
    "drizzle-orm": "^0.39.1",
    "drizzle-zod": "^0.7.0",
    "express": "^4.21.2",
    "express-session": "^1.18.2",
    "lucide-react": "^0.553.0",
    "memorystore": "^1.6.7",
    "nanoid": "^5.1.6",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "wouter": "^3.7.1",
    "ws": "^8.18.3",
    "zod": "^3.24.2",
    "zod-validation-error": "^5.0.0"
  }
}
