{
  "name": "@pos/root",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "NODE_ENV=development tsx apps/api/src/index.ts",
    "dev:turbo": "turbo run dev",
    "build": "turbo run build",
    "build:legacy": "vite build && esbuild apps/api/src/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "NODE_ENV=production node dist/index.js",
    "check": "tsc",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "db:push": "drizzle-kit push",
    "db:seed": "tsx apps/api/src/seed.ts",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.4",
    "esbuild": "^0.25.0",
    "prettier": "^3.2.5",
    "tsx": "^4.20.5",
    "turbo": "^1.13.0",
    "typescript": "5.6.3",
    "vite": "^5.4.20"
  }
}
